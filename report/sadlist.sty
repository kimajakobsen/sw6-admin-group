\ProvidesPackage{sadlist}
\usepackage{xifthen}
\ifdefined\myCaption
  \newcommand{\sadCaption}[1]{\myCaption{#1}}
\else
  \newcommand{\sadCaption}[1]{#1}
\fi
\newcommand{\sadruletickness}{.5px}
\newcommand{\sadb}[1]{\textbf{#1}}
\newcommand{\sadspace}{\vspace{5px}}
\newcommand{\sadwidth}{\textwidth}
\newcommand{\sadrule}{\rule{\sadwidth}{\sadruletickness}}
\newcommand{\saption}[1]{\caption{\sadCaption{#1}}}
\newcommand{\sadcap}[1]{#1}
\newcommand{\sadheadform}[1]{\textbf{\textit{#1}}}
\newcommand{\shf}[1]{\sadheadform{#1}}
\newcommand{\sace}{\hspace{15px}}
\newcommand{\sadcol}{p{0.3\sadwidth} p{0.75\sadwidth}}
\newcommand{\nsadcol}{\sadcol}
\newcommand{\sablerule}{\vspace{-5px}\sadrule{}}
\newcommand{\shfone}[1]{\vspace{2px}  \sadheadform{#1} \vspace{2px}}
\newcommand{\shftwo}[1]{\vspace{-3px} \sadheadform{#1} \vspace{2px}}



