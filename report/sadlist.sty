\newenvironment{sadlistar}[1]%
{%
\begin{center}%
\sadrule{} \\%
\sadheadform{#1}%
\vspace{-5px} \\%
\sadrule{}
\begin{minipage}{\sadwidth -30px}

\sadspace%
}%
{%
\sadspace%
\end{minipage}

\sadrule{}%

\end{center}%
}%
